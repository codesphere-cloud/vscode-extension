{
  "name": "codesphere",
  "displayName": "Codesphere",
  "description": "Connect VS Code to your Codesphere workspaces",
  "version": "0.1.9",
  "icon": "media/Codesphere.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/codesphere-cloud/vscode-extension"
  },
  "engines": {
    "vscode": "^1.87.0"
  },
  "publisher": "Codesphere",
  "pre-release": true,
  "categories": [
    "Other"
  ],
  "pricing": "Free",
  "activationEvents": [
    "onStartupFinished"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codesphere-sidebar-view",
          "title": "Codesphere",
          "icon": "media/codesphere.svg"
        }
      ],
      "panel": [
        {
          "id": "ci-pipeline",
          "title": "Ci-Pipeline",
          "icon": "media/codesphere.svg",
          "order": 10
        }
      ]
    },
    "views": {
      "codesphere-sidebar-view": [
        {
          "type": "tree",
          "id": "workspace-filetree",
          "name": "Workspace filetree",
          "when": "codesphere.isLoggedIn && codesphere.currentWorkspace"
        },
        {
          "type": "webview",
          "id": "codesphere-noworkspace",
          "name": "Workspace filetree",
          "when": "codesphere.isLoggedIn && !codesphere.currentWorkspace"
        },
        {
          "type": "webview",
          "id": "codesphere-sidebar",
          "name": "Codesphere",
          "icon": "media/codesphere.svg",
          "contextualTitle": "Codesphere"
        }
      ],
      "ci-pipeline": [
        {
          "type": "webview",
          "id": "ci-pipeline",
          "name": "Ci-Pipeline",
          "contextualTitle": "Ci Pipeline",
          "when": "codesphere.isLoggedIn && codesphere.workspaceOverview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codesphere.reload",
          "when": "view == codesphere-sidebar && codesphere.isLoggedIn",
          "group": "navigation"
        },
        {
          "command": "codesphere.submenu",
          "when": "view == codesphere-sidebar && codesphere.isLoggedIn",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "codesphere.submenu",
        "title": "logout",
        "icon": "$(log-out)",
        "category": "Codesphere"
      },
      {
        "command": "codesphere.copycode",
        "title": "Copy code",
        "category": "Codesphere"
      },
      {
        "command": "codesphere.reload",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Codesphere"
      },
      {
        "command": "codesphere.refresh",
        "title": "Refresh all webviews"
      },
      {
        "command": "codesphere.openOverView",
        "title": "Open Overview"
      },
      {
        "command": "codesphere.backToMenu",
        "title": "Back to menu"
      },
      {
        "command": "codesphere.openCiPipeline",
        "title": "open CI-Pipeline panel",
        "category": "Codesphere"
      }
    ],
    "extensionKind": [
      "workspace"
    ]
  },
  "extensionPack": [
    "ms-vscode-remote.vscode-remote-extensionpack"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "concurrently \"webpack\" \"rollup -c\"",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "validate": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-html": "^1.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/request": "^2.48.12",
    "@types/vscode": "^1.87.0",
    "@types/vscode-webview": "^1.57.5",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "cloudflared": "^0.5.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "rollup": "^2.79.1",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.9",
    "svelte-preprocess": "^5.1.3",
    "svelte2tsx": "^0.7.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "ws": "^8.16.0"
  },
  "dependencies": {
    "@vscode/vsce": "^2.26.1",
    "ansi-to-html": "^0.7.2",
    "axios": "^1.6.8",
    "exec-sh": "^0.4.0",
    "merge": "^2.1.1",
    "n": "^9.2.1"
  }
}
