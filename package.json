{
  "name": "codesphere",
  "displayName": "codesphere",
  "description": "Use Codesphere in vscode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished:decideLoginOrNot"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codesphere-sidebar-view",
          "title": "Codesphere",
          "icon": "media/codesphere.svg"
        }
      ]
    },
    "views": {
      "codesphere-sidebar-view": [
        {
          "type": "webview",
          "id": "codesphere-sidebar",
          "name": "Codesphere",
          "icon": "media/codesphere.svg",
          "contextualTitle": "Codesphere"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codesphere.notLoggedIn",
          "when": "view == codesphere-sidebar && !codesphere.isLoggedIn",
          "group": "navigation"
        },
        {
          "command": "codesphere.submenu",
          "when": "view == codesphere-sidebar && codesphere.isLoggedIn",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "codesphere.notLoggedIn",
        "title": "Not Logged In",
        "category": "Codesphere"
      },
      {
        "command": "codesphere.submenu",
        "title": "logout",
        "icon": "$(debug-disconnect)",
        "category": "Codesphere"
      },
      {
        "command": "codesphere.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "codesphere.askQuestion",
        "title": "Codesphere aks ask question"
      },
      {
        "command": "codesphere.refresh",
        "title": "refresh all webviews"
      },
      {
        "command": "codesphere.authenticate",
        "title": "Authentication"
      },
      {
        "command": "codesphere.test",
        "title": "test authentication"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "concurrently \"rollup -c -w\" \"webpack --watch\"",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "validate": "svelte-check --tsconfig ./tsconfig.json"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@tsconfig/svelte": "^5.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/request": "^2.48.12",
    "@types/vscode": "^1.87.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "rollup": "^2.79.1",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-svg": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.9",
    "svelte-preprocess": "^5.1.3",
    "svelte2tsx": "^0.7.6",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "n": "^9.2.1",
    "request": "^2.88.2",
    "requests": "^0.3.0",
    "watch": "^1.0.2"
  }
}
